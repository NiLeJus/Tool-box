using UnityEditor;
using UnityEngine;

public class CreateAuthoringScript_Editor : MonoBehaviour
{
    private const string templatePath = "Assets/_Editor/Authoring_ScriptTemplate.txt";

    [MenuItem("Assets/Create/C# Authoring Script", false, 80)]
    public static void CreateCustomScript()
    {
        ProjectWindowUtil.CreateScriptAssetFromTemplateFile(
            templatePath,
            "NewAuthoringScript.cs"
        );
    }
}
